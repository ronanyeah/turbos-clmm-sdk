{
  "git": {
    "push": true,
    "commitMessage": "chore: bump version v${version}",
    "requireBranch": "v0.x"
  },
  "github": {
    "release": true
  },
  "npm": {
    "publish": true,
    "tag": "legacy"
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md"
    }
  }
}
